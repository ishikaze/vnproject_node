<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <style>
        body { background: #121212; color: #eee; font-family: sans-serif; padding: 20px; }
        .card { background: #1e1e1e; padding: 15px; margin-bottom: 10px; border: 1px solid #333; border-radius: 5px; display: flex; justify-content: space-between; align-items: center; }
        a { color: #007acc; text-decoration: none; margin-left: 10px; }
        button { background: #007acc; border: none; padding: 8px 15px; color: white; cursor: pointer; }
    </style>
</head>
<body>
   <div style="display: flex; justify-content: space-between; align-items: center;">
        <h1>Dashboard</h1>
        <div>
            <% if(user.is_admin) { %>
                <a href="/admin" style="background: #e17055; color: white; padding: 8px 15px; border-radius: 4px; text-decoration: none; margin-right: 10px;">
                    <i class="fa-solid fa-shield-halved"></i> Admin Panel
                </a>
            <% } %>
            <a href="/" style="color: #aaa; text-decoration: none;">View Site &rarr;</a>
        </div>
    </div>
    <!-- PROFILE SETTINGS -->
    <div style="background: #1e1e1e; padding: 15px; margin-bottom: 20px; border: 1px solid #333; border-radius: 5px; display: flex; align-items: center; gap: 20px;">
        <div>
            <div style="font-size: 0.8em; color: #aaa;">LOGGED IN AS</div>
            <div style="font-weight: bold; font-size: 1.2em;"><%= user.username %></div>
        </div>
        
        <form action="/api/user/update-profile" method="POST" style="display: flex; gap: 10px; align-items: flex-end;">
            <div>
                <div style="font-size: 0.8em; color: #aaa; margin-bottom: 4px;">DISPLAY NAME</div>
                <input type="text" name="display_name" value="<%= user.display_name || user.username %>" required 
                       style="background: #111; border: 1px solid #444; color: white; padding: 6px; border-radius: 4px;">
            </div>
            <button type="submit" style="background: #007acc; padding: 6px 12px; border: none; border-radius: 4px; color: white; cursor: pointer;">
                Save
            </button>
        </form>
    </div>
    <div style="background: #1e1e1e; padding: 15px; margin-bottom: 20px;">
        <h3>Start New Series</h3>
        <form action="/project/create" method="POST">
            <input type="text" name="title" placeholder="Series Title" required>
            <input type="text" name="description" placeholder="Description">
            <button type="submit">Create</button>
        </form>
    </div>

    <h3>My Series</h3>
    <% projects.forEach(p => { %>
        <div style="background:#222; padding:10px; margin-bottom:10px; border-left: 4px solid <%= p.is_published ? '#00ff00' : '#444' %>">
            <strong><%= p.title %></strong>
            <span style="color:#666"><%= p.is_published ? '(Public)' : '(Hidden)' %></span>
            <a href="/project/<%= p.id %>/manage" style="float:right">Manage Series & Episodes &rarr;</a>
        </div>
    <% }) %>
</body>
</html>